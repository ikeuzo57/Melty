{
  "name": "spectacle",
  "displayName": "Spectacle",
  "description": "AI coding assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "spectacle.generateSpec",
        "title": "Spectacle: Generate Spec"
      },
      {
        "command": "spectacle.reconcileCode",
        "title": "Spectacle: Reconcile Code"
      },
      {
        "command": "spectacle.updateSpec",
        "title": "Spectacle: Update Spec"
      },
      {
        "command": "spectacle.startTask",
        "title": "Spectacle: Start Task"
      },
      {
        "command": "spectacle.updateCode",
        "title": "Spectacle: Update Code"
      }
    ],
    "views": {
      "spectacle": [
        {
          "type": "webview",
          "id": "spectacle.chatView",
          "name": "Spectacle Chat"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spectacle",
          "title": "Spectacle",
          "icon": "resources/spectacle-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Spectacle",
      "properties": {
        "spectacle.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Anthropic Claude"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/diff": "^5.2.1",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "sinon": "^18.0.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "axios": "^1.7.3",
    "dotenv": "^16.4.5",
    "python-ast": "^0.1.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true,
      "description": "This extension requires access to modify workspace files."
    }
  }
}
