{
  "name": "spectacular",
  "displayName": "spectacular",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onView:spectacularChat"],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "spectacularPanel",
          "title": "Spectacular",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "spectacularPanel": [
        {
          "type": "webview",
          "id": "spectacularChat",
          "name": "Spectacular Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "spectacular.openAiderPanel",
        "title": "Open Aider Panel"
      },
      {
        "command": "spectacular.sendMessageToAider",
        "title": "Send Message to Aider"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}
