{
  "name": "spectacle",
  "displayName": "Spectacle",
  "description": "AI coding assistant",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hello-world.showHelloWorld",
        "title": "Hello World: Show"
      }
    ],
    "views": {
      "spectacle": [
        {
          "type": "webview",
          "id": "spectacle.chatView",
          "name": "Spectacle Chat"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spectacle",
          "title": "Spectacle",
          "icon": "resources/spectacle-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Spectacle",
      "properties": {
        "spectacle.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for Anthropic Claude"
        }
      }
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "test:webview": "cd webview-ui && npm run test",
    "vscode:prepublish": "npm run compile",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/diff": "^5.2.1",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.91.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.16.17",
    "eslint": "^8.57.0",
    "sinon": "^18.0.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "axios": "^1.7.3",
    "dotenv": "^16.4.5",
    "python-ast": "^0.1.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true,
      "description": "This extension requires access to modify workspace files."
    }
  }
}
